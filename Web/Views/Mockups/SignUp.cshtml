@model Web.Models.SignUpFst
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form class="form-horizontal" asp-action="SignUp">
    <div class="form-group">
        <label class="col-md-2 control-label">First name</label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="FName" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Last name</label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="SName" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Birthday</label>
        <div class="col-md-10 form-inline">
            <select class="form-control" name="Day">
                <option disabled="disabled" value="0">Day</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
            <select class="form-control" name="Month">
                <option disabled="disabled" value="0">Month</option>
                <option value="January">January</option>
                <option value="February">February</option>
                <option value="March">March</option>
            </select>
            <select class="form-control" name="Year">
                <option disabled="disabled" value="0">Year</option>
                <option value="2000">2000</option>
                <option value="1999">1999</option>
                <option value="1998">1998</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Gender</label>
        <div class="col-md-10">
            <div class="radio">
                <label>
                    <input name="gender" type="radio" value="Male" />
                    Male
                </label>
            </div>
            <div class="radio">
                <label>
                    <input name="gender" type="radio" value="Female"/>
                    Female
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-primary" type="submit">Sign up</button>
        </div>
    </div>
</form>