@model Web.Models.SignUp
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>
<p>User with same profile data already exists. Are you sure you want to sign up?</p>

<form class="form-horizontal" asp-action="SignUpAlreadyExists">
    <input type="hidden" asp-for="@Model.born" />
    <input type="hidden" asp-for="@Model.FName" />
    <input type="hidden" asp-for="@Model.gender" />
    <input type="hidden" asp-for="@Model.SName" />

    <div class="form-group">
        <label class="col-md-2 control-label">First name</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.FName</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Last name</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.SName</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Birthday</label>
        <div class="col-md-10 form-inline">
            <p class="form-control-static">@Model.born</p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Gender</label>
        <div class="col-md-10">
            <p class="form-control-static">@Model.gender</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-primary" type="submit" name="action" value="Sign">Sign up anyway</button>
            <button class="btn btn-primary" type="submit" name="action" value="Back">Back</button>
        </div>
    </div>
</form>